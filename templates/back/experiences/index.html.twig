{% extends 'base.html.twig' %}

{% block title %}Experiences index{% endblock %}

{% block body %}
    <h1>Experiences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ImageSvg</th>
                <th>ImageWebp</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Contents</th>
                <th>Categories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.title }}</td>
                <td>{{ experience.imageSvg }}</td>
                <td>{{ experience.imageWebp }}</td>
                <td>{{ experience.createdAt ? experience.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ experience.updatedAt ? experience.updatedAt|date('H:i:s') : '' }}</td>
                <td>{{ experience.contents }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_experiences_show', {'id': experience.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('app_experiences_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_experiences_new') }}">Create new</a>
{% endblock %}
